
@{
    ViewBag.Title = "EmAberto";
}

<link href="~/Content/Clientes/style.css" rel="stylesheet" />
<script src="http://code.angularjs.org/1.2.16/angular.js"></script>
<script src="http://code.angularjs.org/1.2.16/angular-resource.js"></script>

<script src="~/Scripts/Clientes/bootstrap-11.js"></script>
<link href="~/Content/Cadastro/material-bootstrap-wizard.css" rel="stylesheet" />
<link href="~/Content/alertOk.css" rel="stylesheet" />
<script src="~/Scripts/EmAberto/angular.js"></script>

<div ng-app="App" ng-controller="mainCtrl">

    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-4">
                        <h2>Clientes em <b>Aberto</b></h2>
                    </div>
                    <div class="col-sm-8">
                        <a href="#" class="btn btn-primary"><i class="material-icons">&#xE863;</i> <span>Atualizar Lista</span></a>
                    </div>
                </div>
            </div>
            <div class="table-filter">

                <div class="row">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                        <div class="filter-group">
                            <label>Filtrar</label>
                            <input type="text" class="form-control" ng-model="filtro">
                        </div>
                        <div class="filter-group @ViewBag.adm">
                            <label>Clientes</label>
                            <select class="form-control" style="width:auto" ng-model="filtroCliente" ng-options="x.CLIENTE for x in totais_c | unique:'CLIENTE' |combodef:'CLIENTE':'TODOS'"></select>
                        </div>
                        <span class="filter-icon"><i class="fa fa-filter"></i></span>
                    </div>
                </div>
            </div>
            <div class="table-container table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr style="background-color: #ffd600;color: black;">
                            <th>Cliente</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody ng-cloak>
                        <tr ng-repeat="obj in totais_c |filter:filtro|filter:filtroCliente | filter : paginate">
                            <td>{{obj.CLIENTE}}</td>
                            <td>{{obj.RESTA | currency:'R$ '}}</td>
                        </tr>
                        <tr style="background-color:black">
                            <td style="color:#ffd600;font-weight:800">TOTAIS</td>
                            <td style="color:#ffd600;font-weight:800">{{totais[2] | currency:'R$ '}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="clearfix">
                <pagination total-items="totalItems" ng-model="currentPage" max-size="200" boundary-links="false" items-per-page="numPerPage" class="pagination">
                </pagination>
            </div>
        </div>
    </div>

</div>

